{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 800,
 
    "anchor": "start"
  },
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "graticule": {
          "step": [
            10,
            10
          ],
          "extent": [
            [
              105,
              -45
            ],
            [
              160,
              -10
            ]
          ]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#e0e0e0",
        "strokeWidth": 0.6,
        "fill": "white"
      }
    },
    {
      "data": {
        "url": "STE_2016_AUST.json",
        "format": {
          "type": "topojson",
          "feature": "STE_2016_AUST"
        }
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME16",
          "from": {
            "data": {
              "url": "vehicles_per_1000_by_state_2024.csv"
            },
            "key": "state_name",
            "fields": [
              "cars_per_1000"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#ffffff",
        "strokeWidth": 0.8
      },
      "encoding": {
        "color": {
          "field": "cars_per_1000",
          "type": "quantitative",
          "title": "Cars per 1,000 people",
          "scale": {
            "scheme": "greens"
          }
        },
        "tooltip": [
          {
            "field": "properties.STE_NAME16",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "cars_per_1000",
            "type": "quantitative",
            "title": "Cars per 1,000",
            "format": ".1f"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "legend": {
      "orient": "right"
    }
  }
}
